  <%= form_for pet, url: pet.new_record? ? pets_path : pet_path, html: {class: 'form-group'} do |f| %>

    <% if pet.errors.any? %>
        <div class="alert alert-danger">
            <ul>
              <% pet.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
    <% end %>

    <div class="mb-1">
      <%= f.label :name, 'Nom', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-1">
      <%= f.label :gender, 'Sexe', class: 'form-label' %>
      <%= f.select :gender, {Male: :M, Femelle: :F}, {}, class: 'form-select' %>
    </div>
    <div class="mb-1">
      <%= f.label :birthday, 'Date de naissance', class: 'form-label' %>
      <%= f.date_field :birthday, class: 'form-control', min: '1900-01-01', max: Time.now %>
    </div>
    <div class="mb-3">
      <%= f.label :species_id, 'EspÃ¨ce', class: 'form-label' %>
      <%= f.select :species_id, Species.pluck(:name, :id), {}, class: 'form-select' %>
    </div>
    <div class="mb-3">
      <%= f.label :avatar_file, 'Avatar', class: 'form-label' %>
      <%= f.file_field :avatar_file, class: 'form-control' %>
    </div>

    <div class="mb-1">
      <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>

  <% end %>
